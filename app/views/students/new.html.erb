<div id="form-container">
  <h2 id="form-header">Create Your New Class Lister Account</h2>
  <%= render partial: "layouts/error"%>
  <div id="sign-up-form">
    <%= form_for(@student) do |f| %>
      <%= f.label :name, "Full Name" %><br>
      <%= f.text_field :name %><br>
      <%= f.label :major, "What is your Major?" %><br>
      <%= f.text_field :major %><br>
      <%= f.label :email, "School Email" %><br>
      <%= f.text_field :email %><br>
      <%= f.label :password, "Create Password" %><br>
      <%= f.password_field :password %><br>
      <%= f.label :password_confirmation, "Confirm Password" %><br>
      <%= f.password_field :password_confirmation %><br>
      <%= f.submit "Submit" %>
    <% end %>
    <%= link_to "Cancel", root_path, :class => 'cancel-btn' %>
  </div>
</div>