<%= link_to "Log Out", root_path %>
<h2>Welcome, <%= @student.name %></h2>
<% if @student.list == nil %>
  <h4>It does not appear that you have any scheduled classes</h4>
<% else %>
  <h4>Your Class List</h4>
  <table>
    <tbody>
      <tr>
        <td><strong>Class Name</strong></td>
      </tr>
      <% student_courses(@student).each do |course| %>
        <tr>
          <td><%= link_to course.name, course_path(course.id) %></td>
          <td><%= link_to "Delete From List" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<div>
  <% if @student.list == nil %>
    <%= link_to "Create a Class List", new_student_list_path(@student.id) %>
  <% end %>
  <%= link_to "Edit Class List" %>
</div>